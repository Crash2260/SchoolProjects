package opSysMultithread;
import java.time.LocalDate;

public class RevealThread (String rawData) {
    String birthday = "Missing";
    int month, day, year;
    String firstName = "Missing";
    String middleInit = "Missing";
    String lastName = "Missing";
//Break string on spaces
    String[] spiltData = rawData.split(" ");
	
//Check for beginning letter (B, F, M, L)
    for (String section : spiltData){
        section.trim();
        if(section.charAt[0] == B){
            birthday = section.substring(0);
            birthday = birthday.replaceAll("\\/-,","");
            //Separate birthday into month, day, year
            month = Integer.valueOf(birthday.substring(0,1));
            day = Integer.valueOf(birthday.substring(2,3));
            year = Integer.valueOf(birthday.substring(4));

            if(month > 12 || day > 31){
                birthday = "invalid";
            }
        }
        if(section.charAt[0] == F){
            firstName = section.substring(0);
        }
        if(section.charAt[0] == M){
            middleInit = section.substring(0);
        }
        if(section.charAt[0] == L){
            lastName = section.substring(0);
        }
    }
